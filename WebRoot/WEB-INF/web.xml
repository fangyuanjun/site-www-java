  </servlet-mapping>
  
<filter>
    <filter-name>loginFilter</filter-name>
    <filter-class>me.fyj.user.LoginFilter</filter-class>
    
    <init-param>
      <param-name>loginUrl</param-name>
      <param-value>/login.html</param-value>
    </init-param>
    
    <init-param>
    	<param-name>filter</param-name>
    	<param-value>/my</param-value>
    	<!-- <param-value>/my,/*.do</param-value> -->
    </init-param>

    <init-param>
    	<param-name>noFilter</param-name>
    	<param-value>/login.do,/valcode.do</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>loginFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  
